@model IEnumerable<RRHH.Models.Planilla>

@{
    ViewData["Title"] = "Planillas";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Planillas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Planilla
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            Planilla #@item.PlanillaId
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Fecha:</small>
                                <p class="mb-0">@item.FechaPlanilla.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Estado:</small>
                                <p class="mb-0">
                                    @if (item.PlanillaStatus == 1)
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiva</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Horas Trabajadas:</small>
                                <p class="mb-0">@item.HorasTrabajadas</p>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Horas Extras:</small>
                                <p class="mb-0">@item.HorasExtras</p>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Deducciones:</small>
                                <p class="mb-0">₡@(item.Deducciones?.ToString("N2") ?? "0.00")</p>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Impuesto Renta:</small>
                                <p class="mb-0">₡@(item.ImpuestoRenta?.ToString("N2") ?? "0.00")</p>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-12">
                                <small class="text-muted">Salario Neto:</small>
                                <p class="mb-0 fw-bold">₡@(item.SalarioNeto?.ToString("N2") ?? "0.00")</p>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Banco:</small>
                                <p class="mb-0">@item.Banco</p>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Cuenta:</small>
                                <p class="mb-0">@item.NumeroCuenta</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <small class="text-muted">Usuario:</small>
                                <p class="mb-0">@item.Usuario.NombreUsuario</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@item.PlanillaId" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PlanillaId" class="btn btn-outline-info">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PlanillaId" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
