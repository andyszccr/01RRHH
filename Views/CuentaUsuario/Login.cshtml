@model RRHH.Models.Usuario

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="card mt-5">
    <div class="card-body">
        <h5 class="card-title text-center">Iniciar sesión</h5>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label"></label>
                <input asp-for="Contrasena" type="password" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
        <div class="mt-3 text-center">
            <p>¿No tienes una cuenta? <a href="@Url.Action("Register", "CuentaUsuario")" class="btn btn-link">Registrarse</a></p>
        </div>
    </div>
</div>