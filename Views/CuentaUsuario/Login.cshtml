@model RRHH.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal RRHH</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2980b9;
            --background-color: #f8f9fa;
            --text-color: #333;
            --light-gray: #e9ecef;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100" fill="none" opacity="0.05"><path d="M50 0a50 50 0 1 0 50 50A50 50 0 0 0 50 0zm0 90a40 40 0 1 1 40-40 40 40 0 0 1-40 40z" fill="%233498db"/><path d="M50 20a30 30 0 1 0 30 30 30 30 0 0 0-30-30zm0 50a20 20 0 1 1 20-20 20 20 0 0 1-20 20z" fill="%233498db"/><circle cx="50" cy="50" r="10" fill="%233498db"/><path d="M35 35l30 30M35 65l30-30" stroke="%233498db" stroke-width="2"/></svg>');
            background-size: 300px;
            background-position: center;
            background-color: #f5f7fa;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        .login-box {
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 2rem;
            position: relative;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .login-header h1 {
                color: var(--primary-color);
                font-size: 1.8rem;
                margin-bottom: 0.5rem;
            }

            .login-header p {
                color: #666;
                font-size: 0.9rem;
            }

        .logo-container {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .input-group {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            color: #777;
        }

        .form-control {
            width: 100%;
            padding: 10px 10px 10px 40px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
            }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
            }

        .login-footer {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-link,
        .register-link {
            color: #666;
            text-decoration: none;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
        }

            .back-link:hover,
            .register-link:hover {
                color: var(--primary-color);
            }

            .register-link i {
                font-size: 0.9em;
            }

        .text-danger {
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            font-size: 1.1rem;
            z-index: 2;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-header">
                <div class="logo-container">
                    <i class="fas fa-users"></i>
                </div>
                <h1>Portal RRHH</h1>
                <p>Gestión de Recursos Humanos</p>
            </div>

            <form method="post" class="login-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Usuario" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt rounded-0"></i> Iniciar sesión
                    </button>
                </div>
            </form>

            <div class="login-footer">
                <a href="@Url.Action("Register", "CuentaUsuario")" class="register-link ">
                    <i class="fas fa-user-plus"></i> Registrarme
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>