@model RRHH.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="logo-container">
                <i class="bi bi-people-fill"></i>
            </div>
            <h1>Bienvenido</h1>
            <p>Portal de Recursos Humanos</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="input-group">
                    <i class="bi bi-person-fill input-icon"></i>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Usuario" />
                </div>
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <i class="bi bi-lock-fill input-icon"></i>
                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" />
                </div>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                </button>
            </div>
        </form>

        <div class="login-footer">
            <a href="@Url.Action("Index", "Home")" class="back-link">
                <i class="bi bi-arrow-left"></i> Volver al inicio
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
    }

    .logo-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .logo-container i {
        font-size: 48px;
        color: #764ba2;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .login-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .login-header h1 {
        color: #2c3e50;
        font-size: 28px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .login-header p {
        color: #666;
        margin: 0;
        font-size: 16px;
    }

    .input-group {
        position: relative;
        margin-bottom: 5px;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #764ba2;
        font-size: 16px;
    }

    .form-control {
        width: 100%;
        padding: 12px 12px 12px 45px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 14px;
    }

    .form-control:focus {
        border-color: #764ba2;
        box-shadow: 0 0 0 3px rgba(118, 75, 162, 0.1);
        outline: none;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        cursor: pointer;
        margin-top: 20px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(118, 75, 162, 0.3);
    }

    .btn-primary i {
        margin-right: 8px;
    }

    .back-link {
        display: block;
        text-align: center;
        color: #666;
        text-decoration: none;
        margin-top: 25px;
        font-size: 14px;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #764ba2;
    }

    .back-link i {
        margin-right: 5px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
